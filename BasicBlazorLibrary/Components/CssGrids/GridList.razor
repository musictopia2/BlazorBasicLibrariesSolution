@typeparam T
@if (RenderList == null || ChildContent == null)
{
    return;
}
<GridContainer Inline="@Inline"
               ColumnGap="@ColumnGap"
               Columns="@GetColumns">
    @{
        int x;
        int y;
        x = 1;
        y = 1;
    }
    @foreach (var item in RenderList)
    {
        <GridItem Column="x" Row="y">
            @ChildContent(item)
        </GridItem>
        x++;
        if (x > Columns)
        {
            x = 1;
            y++;
        }
    }
</GridContainer>