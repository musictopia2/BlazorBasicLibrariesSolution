@if (StopClickPropagation)
{
    <StopClickPropagation>
        <GridContainer RowGap="@RowGap" Class="@Class" Style="@Style" ColumnGap="@ColumnGap"
                       Columns="@Get2Columns()"
                       Inline="@Inline">
            @ChildContent
        </GridContainer>
    </StopClickPropagation>
    return;
}

<GridContainer RowGap="@RowGap" Class="@Class" Style="@Style" ColumnGap="@ColumnGap"
               Columns="@Get2Columns()"
               Inline="@Inline">
    @ChildContent
</GridContainer>