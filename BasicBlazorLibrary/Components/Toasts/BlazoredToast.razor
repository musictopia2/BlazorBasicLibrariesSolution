<div class="blazored-toast @ToastSettings!.BaseClass @ToastSettings.AdditionalClasses">
    <div class="blazored-toast-body">
        <div class="blazored-toast-header">
            <span class="customheading">
                @ToastSettings.Heading
            </span>
            
            <span @onclick="@Close" class="closemodal">X</span>
        </div>
        <div class="blazored-message">
            @ToastSettings.Message
        </div>
        
    </div>
    @if (ToastSettings.ShowProgressBar)
    {
        <div class="blazored-toast-progressbar">
            <span style="width: @(_progress)%;"></span>
        </div>
    }
</div>