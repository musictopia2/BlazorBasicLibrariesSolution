@if (ToastList.Any())
{
    <div class="blazored-toast-container mainposition" style="top:@BlazoredToasts.TopOffset;">
        <CascadingValue Value=this>
            @foreach (var toast in ToastList.OrderBy(x => x.TimeStamp))
            {
                <BlazoredToast @key="toast" ToastSettings="toast.ToastSettings" ToastId="toast.ID"  />
            }
        </CascadingValue>
    </div>
}