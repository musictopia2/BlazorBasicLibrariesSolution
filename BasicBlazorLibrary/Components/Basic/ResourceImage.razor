@if (Transform != "" && ID == "")
{
    return;
}
@if (Transform == "")
{
    <svg>
        <image id="@ID" x="@X" y="@Y" width="@Width" height="@Height" href="@GetLink()" />
    </svg>
}
else
{
    <svg>
        <defs>
            <image id="@ID" x="@X" y="@Y" width="@Width" height="@Height" href="@GetLink()" />
        </defs>
        <use transform="@Transform" href="@GetFinalID" />
    </svg>
}