@inherits JavascriptComponentBase
@if (ReadOnly && FullPage)
{
    <div>Currently does not support full page and read only</div>
    return;
}
@if (ReadOnly && MainHotKey != ConsoleKey.NoName)
{
    <div>You cannot use hotkeys for readonly</div>
    return;
}
@if (FullPage)
{
    <div style="margin: 3px;  height: 100%;">
        <textarea class="@Class" @ref="_text" @oninput="HandleOnChange" @onclick:stopPropagation="true" @onclick:preventDefault="true" style="resize: none; width: 100%; height: 100%; @Style">
            @Value
        </textarea>
    </div>
    return;
}
@if (ReadOnly)
{
    <textarea class="@Class" @oninput="HandleOnChange" @onclick:stopPropagation="true" @onclick:preventDefault="true" style="resize: none; width: @Width; @Style" readonly rows="@Rows">
        @Value
    </textarea>
    return;
}
<textarea class="@Class" @ref="_text" @oninput="HandleOnChange" @onclick:stopPropagation="true" @onclick:preventDefault="true" style="resize: none; width: @Width; @Style" rows="@Rows">
    @Value
</textarea>