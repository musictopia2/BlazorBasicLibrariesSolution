@attribute [CascadingTypeParameter(nameof(TValue))]
@using css1 = BasicBlazorLibrary.Components.Basic.BasicStyleComponent;
@typeparam TValue
<div style="overflow-y: auto; height: @Height">
    <table>
        <thead>
            <tr>
                @foreach (var item in Headers)
                {
                    <th style="background-color: @BackgroundColor">@item</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ItemList)
            {
                <tr>
                    @ChildContent!(item)
                </tr>
            }
        </tbody>
    </table>
</div>