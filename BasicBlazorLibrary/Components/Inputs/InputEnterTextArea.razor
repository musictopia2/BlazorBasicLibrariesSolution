@inherits EnterBase<string>
@if (ReadOnly && FullPage)
{
    <div>Currently does not support full page and read only</div>
    return;
}
@if (UseLeftOvers && FullPage)
{
    <div>Currently does not support full page and use with leftovers component</div>
    return;
}
@if (UseLeftOvers)
{

    <textarea spellcheck="@SpellCheck" id="@TabIndex" placeholder="@Placeholder" @ref="InputElement"
    @attributes="AdditionalAttributes" class="@CssClass" @oninput="HandleOnChange" @onclick:stopPropagation="true" @onclick:preventDefault="true" style="resize: none; width: 99%; height: 99%;">
        @Value
    </textarea>
    return;
}
@if (FullPage)
{
    <div style="margin: 3px;  height: 97%;">
        <textarea spellcheck="@SpellCheck" id="@TabIndex" placeholder="@Placeholder" @ref="InputElement"
       @attributes="AdditionalAttributes" class="@CssClass" @oninput="HandleOnChange" @onclick:stopPropagation="true" @onclick:preventDefault="true" style="resize: none; width: 99%; height: 100%;">
            @Value
        </textarea>
    </div>
    return;
}
@if (ReadOnly)
{
    <textarea spellcheck="@SpellCheck" id="@TabIndex" class="@CssClass" placeholder="@Placeholder" @ref="InputElement"
       @attributes="AdditionalAttributes" @oninput="HandleOnChange" @onclick:stopPropagation="true" @onclick:preventDefault="true" style="resize: none; width: @Width; " readonly rows="@Rows">
        @Value
    </textarea>
    return;
}
<textarea spellcheck="@SpellCheck" id="@TabIndex" class="@CssClass" placeholder="@Placeholder" @ref="InputElement"
       @attributes="AdditionalAttributes" @oninput="HandleOnChange" @onclick:stopPropagation="true" @onclick:preventDefault="true" style="resize: none; width: @Width; " rows="@Rows">
    @Value
</textarea>